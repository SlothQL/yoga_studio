<h1>Edit <%= @yoga_class.title%></h1>



<% weekdays = ["Monday", "Tuesday", "Wednesday", "Thursday", "Friday", "Saturday", "Sunday"] %>
<% timeslots = ["08:00", "09:00", "10:00", "11:00", "12:00", "15:00", "16:00", "17:00", "18:00", "19:00"]%>

<form action="/sessions/<%=@yoga_session.id%>" method="post">
   
   <input type="hidden" value="<%=@yoga_class.id%>" name="yoga_class_id" id="yoga_class_id"/>
    <div class="form">
        

        <div class="form-element">
            <label for="wday">Day:</label>
            <select name="wday" id="wday">
            <% for weekday in weekdays%>
                
                <option value="<%=weekday%>" <%= "selected" if weekday == "#{@yoga_session.wday}"%>><%= weekday %></option>
                
            <% end %>
            </select>
        </div>

        <div class="form-element">
            <label for="title">Time:</label>
            <select name="schedule" id="schedule">
            <% for timeslot in timeslots%>
                
                <option value="<%=timeslot%>" <%= "selected" if timeslot == "#{@yoga_session.schedule}"%>><%= timeslot %></option>
               
            <% end %>
             </select>
        </div>

         <div class="form-element">
            <label for="instructor">Instructor:</label>
            <select name="instructor" id="instructor">
                <option value="Rachel" <%= "selected" if @yoga_session.instructor == "Rachel"%>>Rachel</option>
                <option value="Karen" <%= "selected" if @yoga_session.instructor == "Karen"%>>Karen</option>
                <option value="Manuel" <%= "selected" if @yoga_session.instructor == "Manuel"%>>Manuel</option>
             </select>
        </div>

         <div class="form-element">
            <input class="btn" type="submit" value="Edit Session">
        </div>

    </div>
</form>